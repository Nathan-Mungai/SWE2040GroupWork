        <VBox spacing="15.0" style="-fx-padding: 20;" BorderPane.alignment="CENTER">
            <children>
                <!-- This VBox for patient info and filters remains the same -->
                <VBox prefHeight="103.0" prefWidth="717.0" spacing="10.0" style="-fx-background-color: white; -fx-border-color: #BDC3C7; -fx-border-radius: 8; -fx-padding: 15;">
                    <children>
                        <Label fx:id="patientInfoLabel" style="-fx-text-fill: #34495E;" text="Patient:">
                            <font>
                                <Font size="14.0" />
                            </font>
                        </Label>
                        <HBox spacing="10.0">
                            <children>
                                <Label style="-fx-text-fill: #34495E;" text="Search Records:" />
