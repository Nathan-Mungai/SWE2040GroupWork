                <TableView fx:id="medicalHistoryTable" prefHeight="119.0" prefWidth="727.0" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="visitDateColumn" prefWidth="150.0" text="Visit Date" />
                        <TableColumn fx:id="doctorColumn" prefWidth="150.0" text="Doctor" />
                        <TableColumn fx:id="symptomsColumn" prefWidth="150.0" text="Symptoms" />
                        <TableColumn fx:id="diagnosisColumn" prefWidth="150.0" text="Diagnosis" />
                        <TableColumn fx:id="treatmentPlanColumn" prefWidth="150.0" text="Treatment Plan" />
                        <TableColumn fx:id="actionColumn" prefWidth="100.0" text="Action" />
                    </columns>
                    <columnResizePolicy>
                        <TableView fx:constant="UNCONSTRAINED_RESIZE_POLICY" />
                    </columnResizePolicy>
                </TableView>
                
                <!-- This VBox for summary info remains the same -->
                <VBox minHeight="-Infinity" prefHeight="143.0" prefWidth="715.0" spacing="10.0" style="-fx-background-color: white; -fx-border-color: #BDC3C7; -fx-border-radius: 8; -fx-padding: 15;">
