<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="900.0" prefWidth="1200.0" style="-fx-background-color: #ECF0F1;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.ReceptionistDashboardController">
    <left>
        <VBox prefHeight="840.0" prefWidth="250.0" style="-fx-background-color: #2C3E50;" BorderPane.alignment="CENTER">
            <children>
                <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0">
                    <children>
                        <Label style="-fx-text-fill: white;" text="DoctorsPlaza">
                            <font>
                                <Font name="System Bold" size="24.0" />
                            </font>
                        </Label>
                    </children>
                    <padding>
                        <Insets top="20.0" />
                    </padding>
                </VBox>
                <VBox prefHeight="200.0" prefWidth="100.0" spacing="10.0">
                    <children>
                        <Button fx:id="dashboardButton" alignment="CENTER_LEFT" mnemonicParsing="false" onAction="#handleDashboard" prefHeight="40.0" prefWidth="250.0" style="-fx-background-color: #34495E; -fx-text-fill: white; -fx-font-weight: bold;" text="Dashboard" />
                        <Button fx:id="patientsButton" alignment="CENTER_LEFT" mnemonicParsing="false" onAction="#handlePatients" prefHeight="40.0" prefWidth="250.0" style="-fx-background-color: transparent; -fx-text-fill: white;" text="Patients" />
                        <Button fx:id="queueButton" alignment="CENTER_LEFT" mnemonicParsing="false" onAction="#handleQueue" prefHeight="40.0" prefWidth="250.0" style="-fx-background-color: transparent; -fx-text-fill: white;" text="Queue" />
                        <Button fx:id="settingsButton" alignment="CENTER_LEFT" mnemonicParsing="false" onAction="#handleSettings" prefHeight="40.0" prefWidth="250.0" style="-fx-background-color: transparent; -fx-text-fill: white;" text="Settings" />
                    </children>
                    <padding>
                        <Insets left="20.0" />
                    </padding>
                </VBox>
                <Region VBox.vgrow="ALWAYS" />
                <Button fx:id="logoutButton" alignment="CENTER_LEFT" mnemonicParsing="false" onAction="#handleLogout" prefHeight="40.0" prefWidth="250.0" style="-fx-background-color: transparent; -fx-text-fill: white;" text="Logout" />
            </children>
        </VBox>
    </left>
    <center>
        <VBox prefHeight="200.0" prefWidth="100.0" spacing="20.0" BorderPane.alignment="CENTER">
            <children>
                <HBox alignment="CENTER_LEFT" prefHeight="40.0" prefWidth="200.0" spacing="10.0">
                    <children>
                        <Label fx:id="welcomeLabel" style="-fx-text-fill: #34495E;" text="Welcome, [Receptionist Name]">
                            <font>
                                <Font name="System Bold" size="18.0" />
                            </font>
                        </Label>
                        <Region HBox.hgrow="ALWAYS" />
                        <Label fx:id="systemTimeLabel" style="-fx-text-fill: #34495E;" text="System Time: [Time]" />
                    </children>
                    <padding>
                        <Insets left="20.0" right="20.0" />
                    </padding>
                </HBox>
                <VBox spacing="10.0" style="-fx-background-color: white; -fx-border-color: #BDC3C7; -fx-border-radius: 8px; -fx-padding: 15px;">
                    <children>
                        <Label style="-fx-text-fill: #34495E;" text="Patient Management">
                            <font>
                                <Font name="System Bold" size="16.0" />
                            </font>
                        </Label>
                        <HBox alignment="CENTER_LEFT" spacing="10.0">
                            <children>
                                <TextField fx:id="searchPatientField" onAction="#handleSearchPatient" promptText="Search Patients" prefWidth="200" />
                                <Button fx:id="refreshButton" mnemonicParsing="false" onAction="#handleRefresh" style="-fx-background-color: #3498DB; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 5;" text="Refresh" />
                                <Button fx:id="addPatientButton" mnemonicParsing="false" onAction="#handleAddPatient" style="-fx-background-color: #2ECC71; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 5;" text="Add Patient" />
                                <Button mnemonicParsing="false" onAction="#handleAddToMyQueue" style="-fx-background-color: #3498DB; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 5;" text="Add to My Queue" />
                                <Button fx:id="removeFromQueueButton" mnemonicParsing="false" onAction="#handleRemoveFromQueue" style="-fx-background-color: #E74C3C; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 5;" text="Remove from Queue" />
                                <Region HBox.hgrow="ALWAYS" />
                            </children>
                        </HBox>
                        <TableView fx:id="patientTable" prefHeight="400.0" prefWidth="200.0">
                            <columns>
                                <TableColumn fx:id="idColumn" prefWidth="80.0" text="ID" />
                                <TableColumn fx:id="fullNameColumn" prefWidth="150.0" text="Full Name" />
                                <TableColumn fx:id="genderColumn" prefWidth="80.0" text="Gender" />
                                <TableColumn fx:id="ageColumn" prefWidth="80.0" text="Age" />
                                <TableColumn fx:id="phoneColumn" prefWidth="120.0" text="Phone" />
                                <TableColumn fx:id="queuedAtColumn" prefWidth="150.0" text="Queued At" />
                                <TableColumn fx:id="lastVisitColumn" prefWidth="150.0" text="Last Visit" />
                            </columns>
                            <columnResizePolicy>
                                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                            </columnResizePolicy>
                        </TableView>
                    </children>
                </VBox>
            </children>
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
            </padding>
        </VBox>
    </center>
    <bottom>
        <HBox alignment="CENTER_LEFT" prefHeight="40.0" prefWidth="200.0" spacing="20.0" style="-fx-background-color: #34495E;" BorderPane.alignment="CENTER">
            <children>
                <Label style="-fx-text-fill: white;" text="Statistics:" />
                <Label fx:id="connectedPatientsLabel" style="-fx-text-fill: white;" text="Connected Patients: 0" />
                <Label fx:id="lastUpdateLabel" style="-fx-text-fill: white;" text="Last Update: [Time]" />
            </children>
            <padding>
                <Insets bottom="10.0" left="20.0" right="20.0" top="10.0" />
            </padding>
        </HBox>
    </bottom>
</BorderPane>
